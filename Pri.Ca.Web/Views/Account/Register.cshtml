@model AccountRegisterViewModel
<div class="row">
    <div class="col col-lg-5 mx-auto border border-1 rounded rounded-1">
        <h6>Register</h6>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Firstname"></label>
                <input asp-for="Firstname" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Lastname"></label>
                <input asp-for="Lastname" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="RepeatPassword"></label>
                <input asp-for="RepeatPassword" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary mb-2 mt-2">Register</button>
        </form>
    </div>
</div>